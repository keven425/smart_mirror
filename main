#!/usr/bin/env python

import sys
from cv.tracking import Tracking
import chrome_app.chrome_message as chrome_message


if __name__ == '__main__':

    face_detected = False
    tracking = Tracking()
    while True:
        # if !face_detected and face_tracking.detect_faces():
        if tracking.detect():
            face_detected = True
            chrome_message.send_message('{"action": "face_detected"}')

    sys.exit(0)
